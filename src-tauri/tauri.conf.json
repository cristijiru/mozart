{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Mozart",
  "identifier": "com.mozart.app",
  "version": "0.1.0",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "cd .. && trunk serve --port 1420",
    "beforeBuildCommand": "cd .. && trunk build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Mozart",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {
      "developmentTeam": ""
    }
  },
  "plugins": {}
}
